<% if object.errors.any? %>
	<div id="error-explanation">
		<div class="center-container">
			<h3>
				<%= pluralize(object.errors.count, "error")%>
				prohibited this object from being saved:
			</h3>
		</div>
		<div class="center-container">	
			<ul>
				<% object.errors.full_messages.each do |msg|%>
					<li> <%= msg %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>