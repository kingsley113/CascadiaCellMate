<div class="center-container">
	<h3>Outstanding Tasks</h3>
</div>

<ul class="clean">
	<% cell.tasks.each do |task| %>
		<% if task.complete %>
			<li class="strikethrough">
		<% else %>
			<li >
		<% end %>

		<%= form_tag task_path(task), method: :patch, class: "inline" do %>
			<% if !task.complete %>
				<%= hidden_field_tag :'task[complete]', true %>
				<%= submit_tag "\u{25A1}", class: "unchecked_button" %>
			<% else %>
				<%= hidden_field_tag :'task[complete]', false %>
				<%= submit_tag "\u{25A0}", class: "checked_button" %>
			<% end %>
		<% end %>

		<%= task.name %> 
		</li>
	<% end %>
</ul>
<br>


<div class="center-container">Add New Task</div>
<table class="no-border cell-info-table">
	<colgroup class=>
		<col span="1" class="col-1">
		<col span="1" class="col-2">
	</colgroup>

<%= form_tag tasks_path do %>
	<tr>
	<td class="right-align-text">Name:</td> <td><%= text_field_tag :'task[name]', "", class: "input-field" %></td>
	</tr>
	<tr>
	<td class="right-align-text">Description:</td> <td><%= text_field_tag :'task[description]', "", class: "input-field"%></td>
	</tr>
	</table>
	<%=hidden_field_tag :'task[cell_id]', cell.id %>
	<div class="center-container tr-height"><%= submit_tag 'Add task', class: "submit-button"%></div>
<% end %>
