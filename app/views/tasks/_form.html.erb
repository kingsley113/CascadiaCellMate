<div class="center-container">
	<%= form_for task do |f| %>
		<div class="border-box">
			<table>
				<colgroup>
					<col span="1" class="cell-col-1">
					<col span="1">
				</colgroup>

				<tr>
					<td>Name:</td> <td><%=f.text_field :name, class: "input-field" %></td>
				</tr>
				<tr>
					<td>Description:</td> <td><%=f.text_area :description, class:"input-field" %></td>
				<tr>
				
			</table>
			<%=f.hidden_field :cell_id %>

			<div class="center-container" id="margin-top-10">
				<span class="border-box-skinny">
					<%=f.submit button_text, class: "submit-button" %>
				</span>
			</div>
		</div>
	<% end %>
</div>